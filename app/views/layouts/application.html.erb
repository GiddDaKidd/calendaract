    <meta content='width=device-width, initial-scale=1.0' name='viewport'>

  </head>

  <body>
    <div class="container">
      <header>
        <h1><%= link_to "🏠", "http://bxmark.net/" %></h1>
        <h1><%= link_to "BxMark Store Open 🏪hrs", :root, data: { turbolinks: false } %></h1>
      </header>
      <%= yield %>
      <div class="footer">
        <%= link_to "Bxmark Corporation", "http://bxmark.net/", style: "text-decoration: underline;" %>
        <p>Contact: ino@bxmark.net</p>
      </div>
    </div>
  </body>
</html>
